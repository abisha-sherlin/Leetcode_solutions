class Solution {
    public int lengthOfLastWord(String s) {
			s=s.trim();
         int length = 0;
		        int i = s.length() - 1;
		       

		        // Count the characters in the last word
		        while (i>=0&&s.charAt(i) != ' ') {
		            length++;
		            i--;
		        }

		        return length;
        
    }
}
